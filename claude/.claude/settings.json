{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(npm run:*)",
      "Bash(npm ls:*)",
      "Bash(npx vitest run:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Edit(**/*.{vue,ts})",
      "Read(**/*.{vue,ts})"
    ],
    "deny": [
      "Read(./.env)",
      "Read(**/*.env)",
      "Read(**/.env.*)",
      "Bash(curl:*)",
      "Edit(/etc/**)"
    ]
  },
  "enabledPlugins": {
    "example-skills@anthropic-agent-skills": true,
    "typescript-lsp@claude-plugins-official": true
  },
  "language": "japanese",
  "plansDirectory": "./plans"
}
