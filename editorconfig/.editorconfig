# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# JavaScript/TypeScript
[*.{js,ts,jsx,tsx,cjs,mjs}]
indent_size = 2

# CSS/SCSS
[*.{css,scss,sass,less}]
indent_size = 2

# HTML/Vue
[*.{html,vue,xml}]
indent_size = 2

# Go
[*.go]
indent_style = tab

# Python
[*.py]
indent_size = 4

# Rust
[*.rs]
indent_size = 4

# Makefile
[Makefile]
indent_style = tab
